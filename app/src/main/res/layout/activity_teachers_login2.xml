<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Teachers_login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="70dp"
            android:layout_marginTop="30dp"
            android:text="Year :"
            android:textSize="20dp" />



        <Spinner
            android:id="@+id/teacher_login_spinner_year"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"></Spinner>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">


        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="70dp"
            android:layout_marginTop="60dp"
            android:text="Subject :"
            android:textSize="20dp" />



        <Spinner
            android:id="@+id/teacher_login_spinner_subject"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="60dp"></Spinner>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:id="@+id/linearLayout">


        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="70dp"
            android:layout_marginTop="120dp"
            android:text="Type :"
            android:textSize="20dp" />



        <Spinner
            android:id="@+id/teacher_login_spinner_type"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="120dp"></Spinner>

    </LinearLayout>


    <Button
        android:id="@+id/teacher_login_but_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/view3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="22dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:background="@drawable/but_option"

        android:text="Select File" />

    <Button
        android:id="@+id/teacher_login_but_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/view2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:background="@drawable/but_option"

        android:text="Upload" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginTop="280dp"
        android:id="@+id/view3">
    </View>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/view2"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="upload notice"
        android:textAllCaps="true"
        android:textColor="@color/red"
        android:textSize="15dp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginTop="360dp"
        android:id="@+id/view2">
    </View>

    <TextView
        android:id="@+id/teacher_login_txt_student_gui"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="55dp"
        android:gravity="center"
        android:text="check updates"
        android:textAllCaps="true"
        android:textColor="@color/green"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tl_stat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/teacher_login_but_upload"
        android:layout_alignLeft="@+id/teacher_login_but_upload"
        android:layout_alignRight="@+id/teacher_login_but_upload"
        android:layout_alignStart="@+id/teacher_login_but_upload"
        android:layout_below="@+id/view2"
        android:layout_marginTop="15dp"
        android:text="No file selected" />

</RelativeLayout>